@model List<SearchWebApp.Models.SearchResult>

@{
  ViewData["Title"] = "Results";
}

<h2 class="text-center mb-3">Search saved results</h2>

<form asp-controller="Search" asp-action="SearchResults" method="get">
  <div class="row justify-content-center">
    <div class="col-sm-9 col-xl-6">
      <div class="form-group">
        <input name="searchString" type="search" class="form-control" placeholder="Search">
      </div>
    </div>
    <div class="col-auto col-sm-1 pl-0">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </div>
</form>

@if (Model.Count > 0)
{
  @for (int i = 0; i < Model.Count; i++)
   {
     <div class="mb-3">
       <div><h5 class="mb-1"><a href="@Model[i].Url" target="_blank">@Model[i].Title</a></h5></div>
       <div><a href="@Model[i].Url" target="_blank"><cite>@Model[i].Url</cite></a></div>
       <div>@Model[i].Snippet</div>
     </div>
   }
}