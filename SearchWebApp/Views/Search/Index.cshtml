@model List<SearchWebApp.Models.SearchResult>

@{
  ViewData["Title"] = "Index";
}

<h1 class="text-center mb-3">Search</h1>

<form action="/Search" method="post">
  <div class="row justify-content-center">
    <div class="col-sm-9 col-xl-6">
      <div class="form-group">
        <input name="searchString" type="search" class="form-control" placeholder="Search">
      </div>
    </div>
    <div class="col-auto col-sm-1 pl-0">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </div>
</form>

@if (Model.Count > 0)
{
  <h4>@Model[0].SearchService</h4>

@for (int i = 0; i < Model.Count; i++)
 {
   <div class="mb-3">
     <div><a href="@Model[i].Url" target="_blank"><h5 class="mb-1">@Model[i].Title</h5></a></div>
     <div><a href="@Model[i].Url" target="_blank"><cite>@Model[i].Url</cite></a></div>
     <div>@Model[i].Snippet</div>
   </div>
 }
}
